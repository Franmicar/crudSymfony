<form method="post" action="{{ path('juego_delete', {'id': juego.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ juego.id) }}">
    <button class="btn btn-danger btn-md">Eliminar</button>
</form>
