{{ form_start(form) }}
<div class="form-group">
    <label><i class="fa fa-tag" aria-hidden="true"></i>
        {{ form_label(form.Nombre) }}</label>
    {{ form_widget(form.Nombre) }}
    <small>{{ form_help(form.Nombre) }}</small>
    <div class="form-error">
        <span class="text-danger">{{ form_errors(form.Nombre) }}</span>
    </div>
</div>
<div class="form-group">
    <label><i class="fa fa-building" aria-hidden="true"></i>
        {{ form_label(form.Desarrolladora) }}</label>
    {{ form_widget(form.Desarrolladora) }}
    <small>{{ form_help(form.Desarrolladora) }}</small>
    <div class="form-error">
        <span class="text-danger">{{ form_errors(form.Desarrolladora) }}</span>
    </div>
</div>
<div class="form-group">
    <label><i class="fa fa-clock-o" aria-hidden="true"></i>
        {{ form_label(form.Duracion) }}</label>
    {{ form_widget(form.Duracion) }} horas
    <small>{{ form_help(form.Duracion) }}</small>
    <div class="form-error">
        <span class="text-danger">{{ form_errors(form.Duracion) }}</span>
    </div>
</div>
<div class="form-group">
        <label><i class="fa fa-calendar"></i> {{ form_label(form.Fecha) }}</label>
        {{ form_widget(form.Fecha) }}
        <small>{{ form_help(form.Fecha) }}</small>
        <div class="form-error">
            <span class="text-danger">{{ form_errors(form.Fecha) }}</span>
        </div>
    </div>
<div class="form-group">
    <label><i class="fa fa-star-o" aria-hidden="true"></i>
        {{ form_label(form.Genero) }}</label>
    {{ form_widget(form.Genero) }}
    <small>{{ form_help(form.Genero) }}</small>
    <div class="form-error">
        <span class="text-danger">{{ form_errors(form.Genero) }}</span>
    </div>
</div>
<div class="form-group">
    <label><i class="fa fa-gamepad" aria-hidden="true"></i>
        {{ form_label(form.Plataforma) }}</label>
    {{ form_widget(form.Plataforma) }}
    <small>{{ form_help(form.Plataforma) }}</small>
    <div class="form-error">
        <span class="text-danger">{{ form_errors(form.Plataforma) }}</span>
    </div>
</div>
<div class="form-group">
    <label><i class="fa fa-cube" aria-hidden="true"></i>
        {{ form_label(form.Estado) }}</label>
    {{ form_widget(form.Estado) }}
    <small>{{ form_help(form.Estado) }}</small>
    <div class="form-error">
        <span class="text-danger">{{ form_errors(form.Estado) }}</span>
    </div>
</div>
<div class="form-group">
    <label><i class="fa fa-file-image-o" aria-hidden="true"></i>
        {{ form_label(form.Imagen) }}</label>
    {{ form_widget(form.Imagen) }}
    <small>{{ form_help(form.Imagen) }}</small>
    <div class="form-error">
        <span class="text-danger">{{ form_errors(form.Imagen) }}</span>
    </div>
    {% if juego.Imagen  %}
        <img src="{{ asset('uploads/images/' ~ juego.Imagen) }}" width="100"/>
    {% endif %}
</div>
    <button class="btn btn-primary">Guardar</button>
{{ form_end(form) }}
